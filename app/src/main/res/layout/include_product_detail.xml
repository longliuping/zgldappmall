<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/item_text"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <com.zgld.mall.jazzy.JazzyProductDetailViewPager
            android:id="@+id/index_product_images_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/index_product_images_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#D9D9D9"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_title"
            android:layout_marginTop="10dp"
            android:textColor="#727272" />

        <RelativeLayout
            android:id="@+id/item_price"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/item_detail"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp" >

            <TextView
                android:id="@+id/item_sale_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal|bottom"
                android:textColor="#02A6FF"
                android:textSize="20sp" />

            <com.zgld.mall.widget.OriginalPriceTextView
                android:id="@+id/item_market_price"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/item_sale_price"
                android:gravity="center_horizontal|bottom"
                android:textColor="#9C9C9C" />

            <TextView
                android:id="@+id/item_discount_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/item_market_price"
                android:background="#F20000"
                android:gravity="center_horizontal|bottom"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="4.5折"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/product_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/product_detail_pay"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="#EEF9F4" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_return_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_price"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/item_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center_vertical"
                android:src="@drawable/item_love" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="喜欢"
                android:textColor="#727272" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/item_love"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center_vertical"
                android:src="@drawable/item_hand" />

            <TextView
                android:id="@+id/immediately_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="立即购买"
                android:textColor="#F20000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/item_love"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center_vertical"
                android:src="@drawable/item_comment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="联系卖家"
                android:textColor="#727272" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>